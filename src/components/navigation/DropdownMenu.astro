---
interface Props {
  title: string;
  items: {
    name: string;
    href: string;
  }[];
}

const { title, items } = Astro.props;
---
<div class="relative group">
  <button 
    class="flex items-center text-neutral hover:text-primary transition px-4 py-2"
  >
    {title}
    <svg 
      class="w-4 h-4 ml-1" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  
  <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
    <div class="py-1">
      {items.map(item => (
        <a
          href={item.href}
          class="block px-4 py-2 text-neutral hover:bg-neutral-lighter hover:text-primary transition"
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</div>