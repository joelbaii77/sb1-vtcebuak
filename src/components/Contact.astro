---
import PaymentMethods from './PaymentMethods.astro';
---
<section id="contact" class="py-16 px-4 md:px-6 bg-white">
  <div class="container mx-auto">
    <h2 class="text-3xl md:text-4xl font-playfair text-center mb-12">Visit Us</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12">
      <div class="bg-neutral-lighter p-6 md:p-8 rounded-lg">
        <h3 class="text-2xl font-playfair mb-6">Contact Information</h3>
        <div class="space-y-4">
          <p class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>14 Delta Avenue, New Lynn, Auckland, New Zealand</span>
          </p>
          <p class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <div class="flex flex-col">
              <a href="tel:0225929525" class="hover:text-primary transition">Mobile: 022 592 9525</a>
              <a href="tel:096002159" class="hover:text-primary transition">Landline: 09 600 2159</a>
            </div>
          </p>
        </div>

        <div class="mt-8">
          <h4 class="text-xl font-playfair mb-4">Opening Hours</h4>
          <p class="flex items-center space-x-3">
            <svg class="w-6 h-6 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Open 7 days: 10:00 AM - 6:00 PM</span>
          </p>
        </div>

        <div class="mt-8">
          <h4 class="text-xl font-playfair mb-4">Payment Methods</h4>
          <PaymentMethods />
        </div>
      </div>

      <div class="h-[400px] md:h-[500px] rounded-lg overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d797.2084469141472!2d174.68022081744384!3d-36.90805435180664!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6d0d41605f11111f%3A0x7c37b7431d6916eb!2sDelta%20Ave%2C%20New%20Lynn%2C%20Auckland%201025!5e0!3m2!1sen!2snz!4v1625641234567!5m2!1sen!2snz"
          width="100%"
          height="100%"
          style="border:0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="rounded-lg"
          title="Ivana House of Beauty Location"
        ></iframe>
      </div>
    </div>
  </div>
</section>