    <div class="py-16 grid grid-cols-1 md:grid-cols-4 gap-8">
      <FooterSection title="Contact Us">
        <address class="not-italic text-gray-400 space-y-2">
          <p>14 Delta Avenue</p>
          <p>New Lynn, Auckland</p>
          <p>New Zealand</p>
          <div class="mt-4 space-y-1">
            <p>
              <a href="tel:0225929525" class="hover:text-white transition-colors duration-200">
                Mobile: 022 592 9525
              </a>
            </p>
            <p>
              <a href="tel:096002159" class="hover:text-white transition-colors duration-200">
                Landline: 09 600 2159
              </a>
            </p>
          </div>
          <p class="mt-2">
            <a href="mailto:info@ivanahouseofbeauty.com" class="hover:text-white transition-colors duration-200">
              info@ivanahouseofbeauty.com
            </a>
          </p>
        </address>
      </FooterSection>

      <FooterSection title="Opening Hours">
        <div class="text-gray-400 space-y-2">
          <p>Open 7 days</p>
          <p>10:00 AM - 6:00 PM</p>
          <div class="mt-6">
            <FooterPayments />
          </div>
        </div>
      </FooterSection>

      <FooterSection title="Quick Links">
        <nav class="space-y-2">
          <FooterLink href="#home">Home</FooterLink>
          <FooterLink href="#services">Services</FooterLink>
